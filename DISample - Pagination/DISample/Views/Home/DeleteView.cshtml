@model IEnumerable<Models.Category>
@using System.Data.Entity;

@{
    ViewBag.Title = "DeleteView";
}


@Html.AntiForgeryToken()

<h2>DeleteView</h2>

<div>

    <hr />
    <form method="post" action="/Home/Delete">
    @if (Model.Count() != 0)
    {
        foreach (var item in Model)
        {
            <h3>Are you sure you want to delete @item.CategoryName?</h3>
            <input type="hidden" class="form-control" name="categoryId" value='@item.ID' />
        }
    }

   

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </form>
</div>
